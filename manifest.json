      "icons": [
        {
          "src": "/icon-upload.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "浏览热门",
      "short_name": "热门",
      "description": "查看热门照片",
      "url": "/?tab=trending",
      "icons": [
        {
          "src": "/icon-trending.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "我的资料",
      "short_name": "资料",
      "description": "查看我的个人资料",
      "url": "/profile.html",
      "icons": [
        {
          "src": "/icon-profile.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "光影分享桌面版截图"
    },
    {
      "src": "/screenshot-mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
